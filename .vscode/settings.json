{
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableAsyncCompletion": true,
  "omnisharp.enableMsBuildLoadProjectsOnDemand": true,
  "csharpFormatUsings.sortOrder": "System Microsoft",
  "csharpFormatUsings.splitGroups": false,
  "csharpFormatUsings.removeUnnecessaryUsings": true,
  "csharpextensions.privateMemberPrefix": "_",
  "csharpextensions.useFileScopedNamespace": true,
  "files.associations": {
    ".dockerignore": "ignore",
    "appsettings*.json": "jsonc",
    "web.config": "xml",
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[aspnetcorerazor]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[razor]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    ".devcontainer/devcontainer.json"
  ],
  "cSpell.words": [
    "Contravariance",
    "Contravariances",
    "contravariantly",
    "covariantly",
    "Linq",
    "Stackalloc",
    "struct",
    "structs",
    "Unmanaged"
  ]
}
